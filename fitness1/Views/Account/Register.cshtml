@model fitness.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section css{

    <link rel="stylesheet" href="~/Assets/Webclient/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/Webclient/css/animate.css">
    <link rel="stylesheet" href="~/Assets/Webclient/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Assets/Webclient/css/et-line-font.css">
    <link rel="stylesheet" href="~/Assets/Webclient/css/nivo-lightbox.css">
    <link rel="stylesheet" href="~/Assets/Webclient/css/nivo_themes/default/default.css">
    <link rel="stylesheet" href="~/Assets/Webclient/css/owl.theme.css">
    <link rel="stylesheet" href="~/Assets/Webclient/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Assets/Webclient/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Oxygen:400,700' rel='stylesheet' type='text/css'>
    <link rel="icon" type="image/png" href="~/Assets/Webclient/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Assets/Webclient/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/Webclient/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/Webclient/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/Webclient/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/Webclient/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/Webclient/css/main.css">
    <title>Register</title>
}

<div class="limiter">
    <div class="container-login100" style="background-image: url('/Public/img/hero/hero-2.jpg')">
        <div class="wrap-login100" style="background-color: rgb(111, 75, 61,0.5);padding-left:30px;padding-top: 50px; padding-right: 70px">

            <div class="login100-pic js-tilt" data-tilt>
                <img style="margin-left: 20px" src="~/Assets/WebClient/images/img-01.png" alt="IMG">
            </div>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2 style="color: white;margin-left: 10px">Create a new account.</h2>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-white text-center" })
                <label style="color: white">
                    @Html.LabelFor(m => m.Email)
                </label>

                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">

                    @Html.TextBoxFor(m => m.Email, new { @class = "input100", @type = "text", @placehold = "Email" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <label style="color: white">
                    @Html.LabelFor(m => m.Password)
                </label>

                <div class="wrap-input100 validate-input" data-validate="Password is required">

                    @Html.PasswordFor(m => m.Password, new { @class = "input100", @type = "password", @placehold = "Password" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <label style="color: white">
                    @Html.LabelFor(m => m.ConfirmPassword)
                </label>

                <div class="wrap-input100 validate-input" data-validate="Password is required">


                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input100", @type = "password", @placehold = "Password" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Register
                    </button>
                </div>

                <div class="container-login100-form-btn">
                    <p class="form-group" style="font-size: 30px">
                        <span class="txt2" style="color: white;text-align:center">
                            <a style="color: white" href='@Url.Action("Login","Account")'>Go to Login</a>
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </span>
                    </p>
                </div>


            }

            </d>
        </div>
    </div>


    @section js{
        <script src="~/Assets/Webclient/js/jquery.js"></script>
        <script src="~/Assets/Webclient/js/bootstrap.min.js"></script>
        <script src="~/Assets/Webclient/js/jquery.sticky.js"></script>
        <script src="~/Assets/Webclient/js/jquery.backstretch.min.js"></script>
        <script src="~/Assets/Webclient/js/jquery.parallax.js"></script>
        <script src="~/Assets/Webclient/js/nivo-lightbox.min.js"></script>
        <script src="~/Assets/Webclient/js/owl.carousel.min.js"></script>
        <script src="~/Assets/Webclient/js/smoothscroll.js"></script>
        <script src="~/Assets/Webclient/js/wow.min.js"></script>
        <script src="~/Assets/Webclient/js/custom.js"></script>


        <script src="~/Assets/Webclient/vendor/jquery/jquery-3.2.1.min.js"></script>

        <script src="~/Assets/Webclient/vendor/bootstrap/js/popper.js"></script>
        <script src="~/Assets/Webclient/vendor/bootstrap/js/bootstrap.min.js"></script>

        <script src="~/Assets/Webclient/vendor/select2/select2.min.js"></script>

        <script src="~/Assets/Webclient/vendor/tilt/tilt.jquery.min.js"></script>
        <script>
            $('.js-tilt').tilt({
                scale: 1.1
            })</script>
        <script src="~/Assets/Webclient/js/main.js"></script>
    }












