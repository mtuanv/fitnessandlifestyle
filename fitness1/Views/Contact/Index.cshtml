		</div>
	</div>
</section>
@section js{
	<script type="text/javascript">
		function _SendEmail() {
			var obj = {
				name: $('#name').val(),
				subject: $('#subject').val(),
				content: $('#content').val()
			}
			Swal.showLoading()
			if (obj.name.toString() == "") {
				const swalWithBootstrapButtons = Swal.mixin({
					customClass: {
						confirmButton: 'btn btn-success',
						cancelButton: 'btn btn-danger mr-3'
					},
					buttonsStyling: false
				})
				swalWithBootstrapButtons.fire(
					'Fail!',
					'Please input name!',
					'error'
				)
			} else if (obj.subject.toString() == "") {
				const swalWithBootstrapButtons = Swal.mixin({
					customClass: {
						confirmButton: 'btn btn-success',
						cancelButton: 'btn btn-danger mr-3'
					},
					buttonsStyling: false
				})
				swalWithBootstrapButtons.fire(
					'Fail!',
					'Please input subject!',
					'error'
				)
			} else if (obj.content.toString() == "") {
				const swalWithBootstrapButtons = Swal.mixin({
					customClass: {
						confirmButton: 'btn btn-success',
						cancelButton: 'btn btn-danger mr-3'
					},
					buttonsStyling: false
				})
				swalWithBootstrapButtons.fire(
					'Fail!',
					'Please input your feedback!',
					'error'
				)
			} else {
				$.ajax({
					url: "/Contact/SendMailToUser",
					type: "POST",
					data: JSON.stringify(obj),
					contentType: "application/json; charset=utf-8",
					success: function () {
						const swalWithBootstrapButtons = Swal.mixin({
							customClass: {
								confirmButton: 'btn btn-success',
								cancelButton: 'btn btn-danger mr-3'
							},
							buttonsStyling: false
						})
						swalWithBootstrapButtons.fire(
							'Success',
							'Feedback success',
							'success'
						)
					},
					error: function (response) {
						const swalWithBootstrapButtons = Swal.mixin({
							customClass: {
								confirmButton: 'btn btn-success',
								cancelButton: 'btn btn-danger mr-3'
							},
							buttonsStyling: false
						})
						swalWithBootstrapButtons.fire(
							'Fail!',
							'Feedback fail',
							'error'
						)
					}
				});
			}
		}
	</script>
}
