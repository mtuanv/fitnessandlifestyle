<!-- Contact Section Begin -->
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <span>Contact Us</span>
                    <h2>GET IN TOUCH</h2>
                </div>
                <div class="contact-widget">
                    <div class="cw-text">
                        <i class="fa fa-map-marker"></i>
                        <p>Số 8A Tôn Thất Thuyết, Mỹ Đình, Nam Từ Liêm<br /> Hà Nội 100000</p>
                    </div>
                    <div class="cw-text">
                        <i class="fa fa-mobile"></i>
                        <ul>
                            <li><a href="tel://125711811" style="color: #c4c4c4">125-711-811</a></li>
                            <li><a href="tel://125668886" style="color: #c4c4c4">125-668-886</a></li>
                        </ul>
                    </div>
                    <div class="cw-text email">
                        <i class="fa fa-envelope"></i>
                        <p>Support.stormfitness@gmail.com</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="leave-comment">
					<form>
						<input id="name" placeholder="Name"/>
						<input id="subject" placeholder="Subject" />
						<textarea id="content" placeholder="Content"></textarea>
						<button type="button" class="btn btn-danger" onclick="return _SendEmail()">Send Feedback</button>
					</form>
                </div>
            </div>
        </div>
        <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.0968141835715!2d105.78009371488338!3d21.028811885998298!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x313455f9bdf0e1c7%3A0x26caee8e7662dd9b!2zRlBUIEFwdGVjaCBIw6AgTuG7mWk!5e0!3m2!1svi!2s!4v1619406375261!5m2!1svi!2s"
                    height="550" style="border:0;" allowfullscreen=""></iframe>
        </div>
    </div>
</section>
@section js{
    <script type="text/javascript">
        function _SendEmail() {
            var obj = {
                name: $('#name').val(),
                subject: $('#subject').val(),
                content: $('#content').val()
            }
			Swal.showLoading()
            if (obj.name.toString() == "") {
                const swalWithBootstrapButtons = Swal.mixin({
                    customClass: {
                        confirmButton: 'btn btn-success',
                        cancelButton: 'btn btn-danger mr-3'
                    },
                    buttonsStyling: false
                })
                swalWithBootstrapButtons.fire(
                    'Fail!',
                    'Please input name!',
                    'error'
                )
			} else if (obj.subject.toString() == "") {
                const swalWithBootstrapButtons = Swal.mixin({
                    customClass: {
                        confirmButton: 'btn btn-success',
                        cancelButton: 'btn btn-danger mr-3'
                    },
                    buttonsStyling: false
                })
                swalWithBootstrapButtons.fire(
                    'Fail!',
                    'Please input subject!',
                    'error'
                )
			} else if (obj.content.toString() == "") {
                const swalWithBootstrapButtons = Swal.mixin({
                    customClass: {
                        confirmButton: 'btn btn-success',
                        cancelButton: 'btn btn-danger mr-3'
                    },
                    buttonsStyling: false
                })
                swalWithBootstrapButtons.fire(
                    'Fail!',
                    'Please input your feedback!',
                    'error'
                )
            } else {
				$.ajax({
					url: "/Contact/SendMailToUser",
					type: "POST",
					data: JSON.stringify(obj),
					contentType: "application/json; charset=utf-8",
					success: function () {
						const swalWithBootstrapButtons = Swal.mixin({
							customClass: {
								confirmButton: 'btn btn-success',
								cancelButton: 'btn btn-danger mr-3'
							},
							buttonsStyling: false
						})
						swalWithBootstrapButtons.fire(
							'Success',
							'Feedback success',
							'success'
						)
					},
					error: function (response) {
						const swalWithBootstrapButtons = Swal.mixin({
							customClass: {
								confirmButton: 'btn btn-success',
								cancelButton: 'btn btn-danger mr-3'
							},
							buttonsStyling: false
						})
						swalWithBootstrapButtons.fire(
							'Fail!',
							'Feedback fail',
							'error'
						)
					}
				});
            }
        }
    </script>
}
