<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb-bg.jpg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="breadcrumb-text">
					<h2>Diet Plans</h2>
					<div class="bt-option">
						<a href='@Url.Action("Index","Home")'>Home</a>
						<span>Diet Plans</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Breadcrumb Section End -->
<!-- Services Section Begin -->
<section class="services-section spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<span>What we do?</span>
					<h3>Learn about different approaches to fitness nutrition so you can choose the best diet plan to suit your goals.</h3>
				</div>
			</div>
		</div>
		<div class="row">
			@{ int rowCount = 1; int totalRecord = 1;}
			@foreach (var item in Model)
			{
				if (rowCount % 2 != 0)
				{
					<div class="col-lg-6 row">
						<div class="col-lg-6 order-lg-1 col-md-6 p-0">
							<div class="ss-pic">
								<img src="@item.Link" alt="" style="object-fit:cover">
							</div>
						</div>
						<div class="col-lg-6 order-lg-2 col-md-6 p-0">
							<div class="ss-text">
								<div class="content-show">
									<h4>@item.Title</h4>
									<p>@item.Content</p>
								</div>
								<a href="@Url.Action("Details","DietPlans",new {id = item.Id})">Explore</a>
							</div>
						</div>
					</div>
					if (totalRecord % 2 == 0)
					{
						rowCount++;
					}
					totalRecord++;
				}
				else
				{
					<div class="col-lg-6 row">
						<div class="col-lg-6 order-lg-8 col-md-6 p-0">
							<div class="ss-pic">
								<img src="@item.Link" alt="" style="object-fit:cover">
							</div>
						</div>
						<div class="col-lg-6 order-lg-7 col-md-6 p-0">
							<div class="ss-text second-row">
								<div class="content-show">
									<h4>@item.Title</h4>
									<p>
										@item.Content
									</p>
								</div>
								<a href="@Url.Action("Details","DietPlans",new {id = item.Id})">Explore</a>
							</div>
						</div>
					</div>
					if (totalRecord % 2 == 0)
					{
						rowCount++;
					}
					totalRecord++;
				}
			}


		</div>
	</div>
</section>
<!-- Services Section End -->
<!-- Banner Section Begin -->
<section class="banner-section set-bg" data-setbg="img/blog/details/details-hero.jpg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="bs-text service-banner">
					<h2>Exercise until the body obeys.</h2>
					<div class="bt-tips">Where health, beauty and fitness meet.</div>
					<a href="https://www.youtube.com/watch?v=dSSclUCeBQ4" class="play-btn video-popup">
						<i class="fa fa-caret-right"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Banner Section End -->
@section title{
	<title>Diet Plans</title>
}