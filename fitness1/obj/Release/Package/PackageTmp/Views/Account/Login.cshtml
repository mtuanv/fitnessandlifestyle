<title>Login</title>
<style>
</style>


<div class="limiter">
    <div class="container-login100" style="background-image: url('/Public/img/hero/hero-2.jpg')">
        <div class="wrap-login100" style="background-color: rgb(111, 75, 61,0.5);padding-left:30px;padding-top: 50px; padding-right: 70px;">
            <div class="login100-pic js-tilt col-md-7" data-tilt style="opacity: 1!important">
                <img style="margin-left: 20px" src="~/Assets/WebClient/images/img-01.png" alt="IMG">
            </div>
            <div class="col-md-5" style="opacity: 1!important">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    @Html.AntiForgeryToken()

                    <span class="login100-form-title" style="color: white">
                        Member Login
                    </span>
                    @Html.ValidationSummary(true, "", new { @class = "text-white text-center" })
                    <div style="margin-top: 20px" class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input100", @type = "text", @placehold = "Email" })
                        @*<input class="input100" type="text" name="email" placeholder="Email">*@
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", @type = "password", @placehold = "Password" })
                        @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="checkbox" style="margin-left : 30px;color: white">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <p style="font-size: 30px">
                        <span class="txt2" style="color: white;text-align:center">
                            <a style="color: white" href='@Url.Action("Register","Account")'>Create new Account</a>
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </span>
                    </p>

                }
            </div>


        </div>
    </div>
</div>


