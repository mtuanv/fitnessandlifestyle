<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>CALCULATE BMI</h2>
                    <div class="bt-option">
                        <a href='@Url.Action("Index","Home")'>Home</a>
                        <span>BMI</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section style="padding-bottom: 0" class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <span style="font-size: 20px">BMI</span>
                    <h2>CALCULATE FOR INFOMATION</h2>
                </div>
                <div class="contact-widget">
                    <div class="cw-text">
                        <i class="fa fa-mobile"></i>
                        <ul>
                            <li id="Result"></li>

                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="leave-comment">
                    <div class="form-group">
                        <label style="color: white">
                            Weight
                        </label>
                        <input class="form-control" type="number" id="Weight" placeholder="kg">
                    </div>
                    <div class="form-group">
                        <label style="color: white">
                            Height
                        </label>
                        <input class="form-control" type="number" id="Height" placeholder="cm">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-danger" onclick="return _calculate()">Submit</button>
                    </div>



                </div>
            </div>
        </div>
    </div>
</section>


<section style="margin-top: 0" class="services-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>What we do?</span>
                    <h2>PUSH YOUR LIMITS FORWARD</h2>
                </div>
            </div>
        </div>
        <div class="row" id="sugguest">

        </div>
    </div>
</section>




@section js{
    <script type="text/javascript">

        function _calculate() {

            var obj = {
                Weight: $('#Weight').val(),
                Height: $('#Height').val()
            }
           
            var html = '';
            var html2 = '';
            $.ajax({
                url: "/Home/calculateBMI",
                type: "POST",
                data: JSON.stringify(obj),
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    var obj2 = {
                        result: result
                    }
                    html += '<span style = "font-weight: bolder;font-size: 15px"> Your BMI is: ' + result + ' | You can try take practice that are showing below  </span>';
                    html += '<span style = "font-weight: bolder;font-size: 15px "> Normal BMI is: 25';
                    $("#Result").html(html);
                    $.ajax({
                        url: '/Home/listWorkOut',
                        type: "POST",
                        data: JSON.stringify(obj2),
                        contentType: "application/json; charset=utf-8",
                        success: function (KQ) {
                            var random = 1;

                            $.each(KQ, function (k, v) {

                                html2 += ' <div style = "margin-top: 20px" class="col-lg-3">' +
                                    ' <div class="ss-pic">' +
                                    '<img src="/Public/img/services/services-' + random + '.jpg" alt="">' +
                                    '</div>' +
                                    '</div>' +
                                    '<div style = "margin-top: 20px" class="col-lg-3">' +
                                    '<div class="ss-text">' +
                                    '<h4 class= "label_title">' + v.Title + '</h4>' +
                                    ' <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor ut dolore facilisis.' +
                                    ' </p>' +
                                    ' <a href="/WorkOuts/Details/' + v.Id + '">Explore</a>' +
                                    '</div>' +
                                    '</div>';
                                if (random > 4) {
                                    random = 1;
                                } else {
                                    random = random + 1;
                                }
                            });

                            $(".label_title").each(function () {
                                if ($(this).text().length > 50) {
                                    $(this).text($(this).text().substr(0, 50));
                                    $(this).append('...');
                                }
                            });
                            $('#sugguest').html(html2);
                        }
                    });


                }
            });
        }
    </script>
}