@model IEnumerable<fitness.Models.Schedule>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Resources</h2>
                    <div class="bt-option">
                        <a href="@Url.Action("Index","Home")">Home</a>
                        <span>Resources</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<div class="container">

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DayPerWeek.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkOut.Title)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.reps)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DayPerWeek.Day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Exercise.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkOut.Title)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

