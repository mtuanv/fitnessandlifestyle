@model fitness.Models.WorkoutModelIndex

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Workouts</h2>
                    <div class="bt-option">
                        <a href='@Url.Action("Index","Home")'>Home</a>
                        <span>Workouts</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Services Section Begin -->
<section class="services-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>What we do?</span>
                    <h2>PUSH YOUR LIMITS FORWARD</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 order-lg-1 col-md-6 p-0">
                <div class="ss-pic">
                    <img src="~/Public/img/services/services-3.jpg" alt="" />
                </div>

            </div>
            <div class="col-lg-3 order-lg-2 col-md-6 p-0">
                <div class="ss-text">
                    <h4>Muscle Building</h4>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor ut dolore
                        facilisis.
                    </p>
                    <a href="#musleBuild">Explore</a>
                </div>
            </div>
            <div class="col-lg-3 order-lg-3 col-md-6 p-0">
                <div class="ss-pic">
                    <img src="~/Public/img/services/services-4.jpg" alt="" />
                </div>
            </div>
            <div class="col-lg-3 order-lg-3 col-md-6 p-0">
                <div class="ss-text">
                    <h4>Fat Loss</h4>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor ut dolore
                        facilisis.
                    </p>
                    <a href="#fatLoss">Explore</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Services Section End -->
<!-- Banner Section Begin -->
<section class="banner-section set-bg" data-setbg="img/banner-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="bs-text service-banner">
                    <h2>Exercise until the body obeys.</h2>
                    <div class="bt-tips">Where health, beauty and fitness meet.</div>
                    <a href="https://www.youtube.com/watch?v=EzKkl64rRbM" class="play-btn video-popup">
                        <i class="fa fa-caret-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner Section End -->
<!-- Pricing Section Begin -->
<section class="pricing-section service-pricing spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title" id="muscleBuild">
                    <span>Muscle building</span>
                    <h2>Hardcore plan for strengthening your body</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="ts-slider owl-carousel">
                @foreach (var item in Model.WorkOuts.Where(x => x.Category == 1))
                {
                    <div class="col-lg-4 col-md-8" style="padding-top: 15px">
                        <div class="ps-item">
                            <div class="basicInfo">
                                <h3>@item.Title</h3>
                                <div class="pi-price">
                                    <span>Featured Exercises</span>
                                </div>
                            </div>
                            <ul>
                                @foreach (var s in item.Schedules.Where(x => x.DayPerWeekId == 1))
                                {
                                    foreach (var ex in Model.Exercises.Where(x => x.Id == s.ExId))
                                    {
                                        <li>@ex.Title</li>
                                    }
                                }
                            </ul>
                            <a href='@Url.Action("Details","WorkOuts",new {id = item.Id})' class="primary-btn pricing-btn">More Information</a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="section-title" id="fatLoss">
                    <span>fat loss</span>
                    <h2>Choose your suitable plan</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="ts-slider owl-carousel">
                @foreach (var item in Model.WorkOuts.Where(x => x.Category == 2))
                {
                    <div class="col-lg-4 col-md-8" style="padding-top: 15px">
                        <div class="ps-item">
                            <div class="basicInfo">
                                <h3>@item.Title</h3>
                                <div class="pi-price">
                                    <span>Featured Exercises</span>
                                </div>
                            </div>
                            <ul class="list-exercise">
                                @foreach (var s in item.Schedules.Where(x => x.DayPerWeekId == 1))
                                {
                                    foreach (var ex in Model.Exercises.Where(x => x.Id == s.ExId))
                                    {
                                        <li>@ex.Title</li>
                                    }
                                }
                            </ul>
                            <a href='@Url.Action("Details","WorkOuts",new {id = item.Id})' class="primary-btn pricing-btn">More Information</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Pricing Section End -->